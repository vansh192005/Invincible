<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- <link rel="stylesheet" href="admin_panel.css"> -->
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        display: flex;
        color: #333; /* Darker text for better readability */
        background-color: #f4f7f9; /* Light background for a clean look */
      }

      .container {
        display: flex;
        width: 100%;
      }

      .sidebar {
        width: 220px; /* Slightly narrower sidebar */
        background-color: #2c3e50; /* Darker sidebar color */
        color: #ecf0f1; /* Light text on dark sidebar */
        padding: 20px 10px; /* Reduced horizontal padding */
      }

      .logo {
        font-size: 1.6em;
        font-weight: 600;
        margin-bottom: 30px;
        text-align: center;
      }

      .nav a {
        display: block;
        padding: 12px 15px; /* Increased padding */
        text-decoration: none;
        color: #ecf0f1;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }

      .nav a:hover,
      .nav a.active {
        background-color: #34495e; /* Slightly lighter hover/active color */
      }

      .applications,
      .layouts,
      .pages {
        margin-top: 25px;
      }

      .applications p,
      .layouts p,
      .pages p {
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 0.9em;
        color: #bdc3c7; /* Lighter text for section titles */
        padding-left: 15px;
      }

      .applications a,
      .layouts a,
      .pages a {
        display: block;
        padding: 10px 15px;
        text-decoration: none;
        color: #ecf0f1;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }

      .applications a:hover,
      .layouts a:hover,
      .pages a:hover {
        background-color: #34495e;
      }

      .hot {
        background-color: #e74c3c; /* Red for hot */
        color: white;
        padding: 3px 6px;
        border-radius: 4px;
        font-size: 0.8em;
        margin-left: 5px;
      }

      .main-content {
        flex-grow: 1;
        padding: 30px;
      }

      .top-section {
        display: grid;
        grid-template-columns: repeat(
          auto-fit,
          minmax(250px, 1fr)
        ); /* Responsive grid */
        gap: 25px;
        margin-bottom: 30px;
      }

      .card {
        background-color: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08); /* Subtle shadow */
      }

      .card h2 {
        font-size: 1.1em;
        font-weight: 600;
        margin-bottom: 12px;
      }

      .amount {
        font-size: 2.2em;
        font-weight: 700;
        margin-bottom: 8px;
      }

      .description {
        color: #777;
        margin-bottom: 20px;
      }

      .chart {
        height: 60px;
        background-color: #f0f0f0;
        border-radius: 4px;
      }

      .middle-section {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 30px;
        margin-bottom: 30px;
      }

      .upgrade-card {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
        text-align: center;
      }

      .upgrade-btn,
      .upgrade-account-btn {
        background-color: #3498db; /* Blue for buttons */
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        margin: 15px 8px;
        font-weight: 600;
        transition: background-color 0.3s ease;
      }

      .upgrade-btn:hover,
      .upgrade-account-btn:hover {
        background-color: #2980b9; /* Darker blue on hover */
      }

      .upgrade-image {
        width: 100%;
        margin-top: 20px;
        border-radius: 6px;
      }

      .sales-analytics {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
      }

      .sales-analytics h2 {
        font-size: 1.3em;
        font-weight: 600;
        margin-bottom: 20px;
      }

      .sales-data {
        display: flex;
        justify-content: space-around;
        margin-bottom: 25px;
      }

      .sales-data p {
        font-weight: 600;
      }

      .sales-chart {
        height: 250px;
        background-color: #f0f0f0;
        border-radius: 6px;
      }

      .bottom-section {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
      }

      .earning-reports h2 {
        font-size: 1.3em;
        font-weight: 600;
        margin-bottom: 20px;
      }

      .earning-data {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
      }

      .earning-data .amount {
        font-size: 1.8em;
      }

      .period {
        color: #777;
        margin-bottom: 20px;
      }

      .doughnut-chart {
        height: 200px;
        background-color: #f0f0f0;
        border-radius: 50%;
        margin: 0 auto;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="logo">DASHBOARDS</div>
        <nav class="nav">
          <a href="#" class="active">Sales</a>
          <a href="#">Analytics</a>
        </nav>
        <div class="applications">
          <p>APPLICATIONS</p>
          <a href="#">Calendar</a>
          <a href="#">Chat <span class="hot">Hot</span></a>
          <a href="#">Kanban Board</a>
          <a href="#">File Manager</a>
          <a href="#">Email</a>
          <a href="#">Contacts</a>
          <a href="#">Gallery</a>
          <a href="#">Projects</a>
        </div>
        <div class="layouts">
          <p>LAYOUTS</p>
          <a href="#">Horizontal</a>
        </div>
        <div class="pages">
          <p>PAGES</p>
          <a href="#">Authentication</a>
          <a href="#">Error Pages</a>
        </div>
      </aside>
      <main class="main-content">
        <div class="top-section">
          <div class="card">
            <h2>ACTIVE USERS</h2>
            <p class="amount">6,985</p>
            <p class="description">Users this Week</p>
            <div class="chart"></div>
          </div>
          <div class="card">
            <h2>PROGRAMS</h2>
            <p class="amount">$46.34k</p>
            <p class="description">Earning this month</p>
            <div class="chart"></div>
          </div>
          <div class="card">
            <h2>CLASSES</h2>
            <p class="amount">$895.02</p>
            <p class="description">Refunds this month</p>
            <div class="chart"></div>
          </div>
        </div>
        <div class="middle-section">
          <div class="upgrade-card">
            <p>Your free trial expired in 21 days.</p>
            <button class="upgrade-btn">Upgrade</button>
            <p>Upgrade your plan from a Free trial, to 'Premium Plan' â†’</p>
            <button class="upgrade-account-btn">Upgrade Account!</button>
            <img src="upgrade-image.png" alt="Upgrade" class="upgrade-image" />
          </div>
          <div class="sales-analytics">
            <h2>
              Sales Analytics <span class="sort-by">Sort By: Yearly</span>
            </h2>
            <div class="sales-data">
              <p class="income">$3.85k Income</p>
              <p class="sales">258 Sales</p>
              <p class="users">52k Users</p>
            </div>
            <div class="sales-chart"></div>
          </div>
        </div>
        <div class="bottom-section">
          <div class="earning-reports">
            <h2>
              Earning Reports <span class="report-by">Report By: Monthly</span>
            </h2>
            <div class="earning-data">
              <div class="this-month">
                <p>This Month</p>
                <p class="amount">$12,582</p>
                <p class="percent">+15%</p>
              </div>
              <div class="last-month">
                <p>Last Month</p>
                <p class="amount">$98,741</p>
              </div>
            </div>
            <p class="period">25.2% From previous period</p>
            <div class="doughnut-chart"></div>
          </div>
        </div>
      </main>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Dummy data for the sales chart
        const salesData = {
          labels: [
            "Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
          ],
          values: [20, 35, 28, 45, 30, 50, 60, 48, 55, 65, 70],
        };

        const salesChart = document.querySelector(".sales-chart");
        new Chart(salesChart, {
          type: "bar", // Or 'line', 'pie', etc.
          data: {
            labels: salesData.labels,
            datasets: [
              {
                label: "Sales",
                data: salesData.values,
                backgroundColor: "#3498db",
              },
            ],
          },
          options: {
            scales: {
              y: {
                beginAtZero: true,
              },
            },
          },
        });
      });
    </script>
  </body>
</html>
