<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/admin_panel.css">
    <title>Admin Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/5df5ba9f64.js" crossorigin="anonymous"></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>

<body>
    <!-- <h2>You are now on admin page</h2> -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar d-md-block bg-dark">
                <h4 class="text-center text-white">Admin Panel</h4>
                <a href="#" class="active"><i class="fas fa-home me-2"></i>Dashboard</a>
                <a href="#"><i class="fas fa-users me-2"></i>Users</a>
                <a href="/admin_events"><i class="fas fa-calendar-alt me-2"></i>Events</a>
                <a href="#"><i class="fas fa-chart-line me-2"></i>Analytics</a>
                <a href="#"><i class="fas fa-cog me-2"></i>Settings</a>
                <a href="/admin_logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-md-4 py-4">
                <h2 class="mb-4">Dashboard</h2>

                <!-- Cards Row -->
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary shadow">
                            <div class="card-body">
                                <h5 class="card-title">Users</h5>
                                <h2 id="userCount" data-count="<%= userCount %>">0</h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card text-white bg-success shadow">
                            <div class="card-body">
                                <h5 class="card-title">Events</h5>
                                <h2 id="eventCount" data-count="<%= eventCount %>">0</h2>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card text-white bg-warning shadow">
                            <div class="card-body">
                                <h5 class="card-title">Bookings</h5>
                                <h2 id="bookingCount" data-count="<%= bookingCount %>">0</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts -->
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="chart-container">
                            <canvas id="usersChart"></canvas>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="chart-container">
                            <canvas id="eventsChart"></canvas>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js Setup -->
    <script>
        // Users Growth Chart
        const ctx1 = document.getElementById('usersChart').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Users',
                    data: [50, 100, 180, 240, 300],
                    borderColor: 'blue',
                    backgroundColor: 'rgba(0,123,255,0.3)',
                    fill: true,
                    tension: 0.3
                }]
            }
        });

        // Events Growth Chart
        const ctx2 = document.getElementById('eventsChart').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Events',
                    data: [10, 20, 15, 30, 45],
                    backgroundColor: 'rgba(40,167,69,0.7)',
                }]
            }
        });
    </script>

    <script src="admin_panel.js"></script>
</body>

</html>